<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:background="#FFFFFE"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Add Product"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#4CAF50" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/productName"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:adjustViewBounds="true"
            android:background="#F5F5F5"
            android:hint="Enter your product name"
            android:imeOptions="actionNext"
            android:padding="7dp"
            android:textColor="#D3074FAE"
            android:textColorHint="#D3074FAE" />

        <EditText
            android:id="@+id/size"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:background="#F5F5F5"
            android:hint="Enter your size"
            android:imeOptions="actionNext"
            android:padding="7dp"
            android:textColor="#D3074FAE"
            android:textColorHint="#D3074FAE" />

        <EditText
            android:id="@+id/price"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:background="#F5F5F5"
            android:hint="Enter your price"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:padding="7dp"
            android:textColor="#D3074FAE"
            android:textColorHint="#D3074FAE" />

        <EditText
            android:id="@+id/cartonNumber"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:background="#F5F5F5"
            android:hint="Enter carton number"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:padding="7dp"
            android:textColor="#D3074FAE"
            android:textColorHint="#D3074FAE" />

        <Button
            android:id="@+id/addProd"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="#4CAF50"
            android:text="Save"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>


</LinearLayout>